
@{
    Layout = "~/Views/Shared/_LayoutVideo.cshtml";
    ViewBag.Title = "Controles";
}

<h2>Controles</h2>

<div id="buttonbar">
        <button id="restart" onclick="restart();">[]</button>
        <button id="rew" onclick="skip(-10)">&lt;&lt;</button>
        <button id="play">&gt;</button>
        <button id="fastFwd" onclick="skip(10)">&gt;&gt;</button>
    </div>


<button type="button" class="btn btn-primary btn-lg" id="sendvideo">
        play video with video
    </button>

  



@section scripts {
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
<script src="~/signalr/hubs"></script>
<script>
        $(function () {
            var url = '~/Home/StreamingVideo';
            var chat = $.connection.exempleHhub;
           

            $.connection.hub.start().done(function () {

                $('#sendvideo').click(function () {
                    console.log("se realizo el click");
                    chat.server.sendVideo();
                   

                });
                $('#play').click(function () {
                    console.log("se realizo el click en play");
                    chat.server.playVideo();


                });
            });
        });
;

</script>
}

