@*@model IEnumerable<PMMX.Modelo.Entidades.MecanicoPorBusinessUnit>*@
@model IEnumerable<PMMX.Modelo.Entidades.InsiteLAC.KPI>

@{
    ViewBag.Title = "Index";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    @Styles.Render("~/Style/DataTables")

}
<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">KPI's</h3>
                <div class="box-tools">
                    <a href="@Url.Action("Create", "InSiteLAC")" class="btn btn-primary btn-sm">
                        <span class="fa fa-plus" aria-hidden="true"></span>
                    </a>
                    <a href="@Url.Action("UploadFile", "InSiteLAC")" class="btn btn-primary btn-sm">
                        <span class="fa fa-upload" aria-hidden="true"></span>
                    </a>

                </div>
            </div>
            <div class="box-body table-responsive">
                <table class="table table-hover table-striped" id="example1">
                    <thead>
                        <tr class="info">
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.YTD)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Mes_Efectivo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Anio_Efectivo)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.YTD)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Mes_Efectivo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Anio_Efectivo)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="info">
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.YTD)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Mes_Efectivo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Anio_Efectivo)
                            </th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/JS/DataTables")
    <script>
        $(function () {
            $('#example1').DataTable();
        });
        $('#example1 input[type="checkbox"]').iCheck({
            checkboxClass: 'icheckbox_flat-blue',
            radioClass: 'iradio_flat-blue'
        });
    </script>
}
