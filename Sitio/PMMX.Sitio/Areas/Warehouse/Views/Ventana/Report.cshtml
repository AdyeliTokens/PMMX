@using Sitio.Helpers
@model Sitio.Models.FechaInicioFin

@{
    ViewBag.Title = "Reportes";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}


@section Styles {}

<div class="row">
    <div class="col-md-3">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Parametros</h3>
                <div class="pull-right">
                    <button id="btn-downloadReport" type="button" class="btn btn-primary btn-sm btn-flat"><i class="fa fa-download"></i></button>
                </div>
            </div>

            <div class="box-body">

                <div class="form-group">
                    @Html.LabelFor(model => model.Inicio, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            @Html.EditorFor(model => model.Inicio, new { htmlAttributes = new { @class = "form-control  pull-right" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.Inicio, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Fin, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            @Html.EditorFor(model => model.Fin, new { htmlAttributes = new { @class = "form-control  pull-right" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.Fin, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {}
@Scripts.Render("~/JS/jquery")
@Scripts.Render("~/JS/Bootstrap")

<script>
    $(function () {

        $("#btn-downloadReport").on("click", function (e) {
            var Inicio = $("#Inicio").val();
            var Fin = $("#Fin").val();
            window.open("/Warehouse/Ventana/downloadReport?Inicio=" + Inicio + "&Fin=" + Fin);
            e.preventDefault();
        });

    });


</script>

