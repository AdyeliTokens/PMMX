@model IEnumerable<PMMX.Modelo.Entidades.Warehouse.Proveedores>

@{
    ViewBag.Title = "Index";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    @Styles.Render("~/Style/DataTables")

}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Proveedores</h3>
                <div class="box-tools">
                </div>
            </div>
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover table-striped" id="example1">
                    <thead>
                        <tr style="width:100%" class="info">
                            <th style="width:10%">
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th style="width:20%">
                                @Html.DisplayNameFor(model => model.NumeroProveedor)
                            </th>
                            <th style="width:20%">
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th style="width:20%">
                                @Html.DisplayNameFor(model => model.NombreCorto)
                            </th>
                            <th style="width:20%">
                                @Html.DisplayNameFor(model => model.IdCategoria)
                            </th>
                            <th style="width:20%">
                                @Html.DisplayNameFor(model => model.Activo)
                            </th>
                            <th style="width:10%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr class=@(item.Activo ? "primary" : "approved")>
                                <td>
                                    @Html.ActionLink("" + item.Id, "Details", new { id = item.Id })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumeroProveedor)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NombreCorto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdCategoria)
                                </td>
                                <td>
                                    @Html.CheckBoxFor(modelItem => item.Activo)
                                    @Html.LabelFor(modelItem => item.Activo)
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-default dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">
                                            <i class="fa fa-gear"></i>
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-right" role="menu" aria-labelledby="menu1">
                                            <li role="presentation">@Html.ActionLink("Editar", "Edit", new { id = item.Id })</li>
                                            <li role="presentation">@Html.ActionLink("Detalles", "Details", new { id = item.Id })</li>
                                            <li role="presentation" class="divider"></li>
                                            <li role="presentation">@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr style="width:100%" class="info"></tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/JS/DataTables")
    <script>
        $(function () {
            $('#example1').DataTable();
        });
        $('#example1 input[type="checkbox"]').iCheck({
            checkboxClass: 'icheckbox_flat-blue',
            radioClass: 'iradio_flat-blue'
        });
    </script>
}