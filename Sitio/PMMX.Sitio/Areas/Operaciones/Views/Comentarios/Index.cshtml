@model IEnumerable<PMMX.Modelo.Entidades.Defectos.Comentario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Defecto.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdComentador)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Opinion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Defecto.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdComentador)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Opinion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
