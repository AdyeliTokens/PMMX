@model IEnumerable<PMMX.Modelo.Entidades.VolumenDeProduccion>

@{
    ViewBag.Title = "Index";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    @Styles.Render("~/Style/DataTables")

}
<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Volumenes de Produccion - FA</h3>
                <div class="box-tools">
                    <a href="@Url.Action("DeleteAll", "VolumenesDeProduccion")" class="btn btn-danger btn-sm">
                        <span class="fa fa-trash" aria-hidden="true"></span> Eliminar todo
                    </a>
                    <a href="@Url.Action("Create", "VolumenesDeProduccion")" class="btn btn-primary btn-sm">
                        <span class="fa fa-plus" aria-hidden="true"></span>
                    </a>
                    <a href="@Url.Action("Upload", "VolumenesDeProduccion")" class="btn btn-primary btn-sm">
                        <span class="fa fa-cloud-upload" aria-hidden="true"></span>
                    </a>
                </div>
            </div>
            <div class="box-body table-responsive">
                <table class="table table-hover table-striped" id="example1">
                    <thead>
                        <tr class="info">
                            <th>
                                @Html.DisplayNameFor(model => model.MarcaDelCigarrillo.Code_FA)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MarcaDelCigarrillo.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Reportante.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.WorkCenter.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.New_Qty)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MarcaDelCigarrillo.Code_FA)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MarcaDelCigarrillo.Descripcion)
                                </td>
                                <td>
                                    <div class="user-block">
                                        <img class="img-circle img-responsive img-bordered-sm" src="@Url.Action("Usuario", "Fotos", new { idPersona = item.IdPersona, area = "" })" alt="User Image">
                                        <span class="username">
                                            <a href="#">
                                                @Html.DisplayFor(modelItem => item.Reportante.Nombre) @Html.DisplayFor(modelItem => item.Reportante.Apellido1) @Html.DisplayFor(modelItem => item.Reportante.Apellido2).
                                            </a>
                                        </span>
                                        <span class="description">Reporto el - @Html.DisplayFor(modelItem => item.Fecha)</span>
                                    </div>




                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.WorkCenter.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.New_Qty)
                                </td>

                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="info">
                            <th>
                                @Html.DisplayNameFor(model => model.MarcaDelCigarrillo.Code_FA)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MarcaDelCigarrillo.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Reportante.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.WorkCenter.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.New_Qty)
                            </th>

                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/JS/DataTables")
    <script>
        $(function () {
            $('#example1').DataTable();
        });
        $('#example1 input[type="checkbox"]').iCheck({
            checkboxClass: 'icheckbox_flat-blue',
            radioClass: 'iradio_flat-blue'
        });
    </script>
}


