@using Sitio.Helpers
@model PMMX.Modelo.Entidades.VolumenDeProduccion

@{
    ViewBag.Title = "Create";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
                <div class="box-tools">

                </div>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="box-body">


                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.New_Qty, htmlAttributes: new { @class = "control-label col-md-1" })
                            <div class="col-md-11">
                                @Html.EditorFor(model => model.New_Qty, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.New_Qty, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "control-label col-md-1" })
                            <div class="col-md-11">
                                @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.IdWorkCenter, "IdWorkCenter", htmlAttributes: new { @class = "control-label col-md-1" })
                            <div class="col-md-11">
                                @Html.DropDownList("IdWorkCenter", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IdWorkCenter, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Code_FA, "Code_FA", htmlAttributes: new { @class = "control-label col-md-1" })
                            <div class="col-md-11">
                                @Html.DropDownList("Code_FA", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Code_FA, "", new { @class = "text-danger" })
                            </div>
                        </div>


                    </div>



                </div>

                <div class="box-footer clearfix">

                    @Ajax.MenuLink(" Back to List", string.Format("{0:c}", "fa fa-chevron-left"), "Index", "VolumenesDeProduccion", new { area = "Operaciones" }, null, new { @class = "btn btn-default" })


                    <input type="submit" value="Create" class="btn btn-primary pull-right" />

                </div>

            }
        </div>
    </div>
</div>
