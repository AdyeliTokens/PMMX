@using Sitio.Helpers
@model PMMX.Modelo.Entidades.NoConformidad

@{
    ViewBag.Title = "Upload";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Cargar condiciones anormales.</h3>
        <div class="box-tools pull-right">
            
        </div>
    </div>
    @using (Html.BeginForm("Upload", "NoConformidades", FormMethod.Post, new { area = "Operaciones", enctype = "multipart/form-data" , @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <div class="box-body">
            
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Excel</label>
                <div class="col-md-10">
                    <input type="file" name="file" id="file" />
                </div>
            </div>

            
            
        </div>

        <div class="box-footer clearfix">
            @Ajax.MenuLink(" Back to List", string.Format("{0:c}", "fa fa-chevron-left"), "Index", "NoConformidades", new { area = "Operaciones" }, null, new { @class = "btn btn-default" })

            <input class="btn btn-primary pull-right" type="submit" value="Upload Image"/>
        </div>
    }
</div>

