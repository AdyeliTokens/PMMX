@model IEnumerable<PMMX.Modelo.Entidades.Marca>

@{
    ViewBag.Title = "Index";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    @Styles.Render("~/Style/DataTables")

}
<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Marcas de cigarrillos - FA</h3>
                <div class="box-tools">
                    <a href="@Url.Action("DeleteAll", "Marcas")" class="btn btn-danger btn-sm">
                        <span class="fa fa-trash" aria-hidden="true"></span> Eliminar todo
                    </a>
                    <a href="@Url.Action("Create", "Marcas")" class="btn btn-primary btn-sm">
                        <span class="fa fa-plus" aria-hidden="true"></span>
                    </a>
                    <a href="@Url.Action("Upload", "Marcas")" class="btn btn-primary btn-sm">
                        <span class="fa fa-cloud-upload" aria-hidden="true"></span>
                    </a>
                </div>
            </div>
            <div class="box-body table-responsive">
                <table class="table table-hover table-striped" id="example1">
                    <thead>
                        <tr class="info">
                            <th>
                                @Html.DisplayNameFor(model => model.Codigo_FA)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Codigo_Cigarrillo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PesoPorCigarrillo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PesoTabacco)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaDeAlta)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Activo)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr class=@(item.Activo ? "success" : "danger")>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Codigo_FA)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Codigo_Cigarrillo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PesoPorCigarrillo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PesoTabacco)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaDeAlta)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Activo)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="info">
                            <th>
                                @Html.DisplayNameFor(model => model.Codigo_FA)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Codigo_Cigarrillo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PesoPorCigarrillo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PesoTabacco)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaDeAlta)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Activo)
                            </th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/JS/DataTables")
    <script>
        $(function () {
            $('#example1').DataTable();
        });
        $('#example1 input[type="checkbox"]').iCheck({
            checkboxClass: 'icheckbox_flat-blue',
            radioClass: 'iradio_flat-blue'
        });
    </script>
}
