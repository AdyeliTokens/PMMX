@model IEnumerable<PMMX.Modelo.Vistas.GembaWalkView>
    @{
        ViewBag.Title = "Index";
        Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
    }


    @Styles.Render("~/Style/DataTables")


    <div id="header" style="padding: 20px 30px; background: rgb(243, 156, 18); z-index: 999999; font-size: 16px; font-weight: 600;">
        <h2 style="color: white">CAPAIAS</h2>
    </div>

    <!-- Modal-->
    <div class="modal fade" id="createAssetModal" role="dialog" aria-labelledby="CreateAssetModal" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-lg">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header alert-info">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div id="createAssetContainer" class="col-md-12"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="box-header">
            <div class="box-tools">
                <div class="form-group col-xs-4">
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input type="text" class="form-control pull-right" id="reservation">
                    </div>
                </div>
                <div class="pull-right">
                    <button class="btn-success" id="addNew"><i class="fa fa-plus-circle"></i></button>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <div class="box-tools">
                        @*<div class="input-group input-group-sm" style="width: 150px;">
                                <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
                                <div class="input-group-btn">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>*@
                    </div>
                </div>
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover table-striped" id="example1">
                        <thead>
                            <tr style="width:100%" class="info">
                                <th style="width:3%"></th>
                                <th style="width:2%">
                                </th>
                                <th style="width:5%">
                                    BU
                                </th>
                                <th style="width:5%">
                                    LU
                                </th>
                                <th style="width:3%">
                                    Modulo
                                </th>
                                <th style="width:15%">
                                    Reporta
                                </th>
                                <th style="width:20%">
                                    @Html.DisplayNameFor(model => model.Descripcion)
                                </th>
                                <th style="width:10%">
                                    @Html.DisplayNameFor(model => model.FechaReporte)
                                </th>
                                <th style="width:2%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr class=@(item.Activo ? "danger" : "success")>
                                    <td>
                                        @Html.ActionLink("" + item.Id, "Details", new { id = item.Id })
                                    </td>
                                    <td>
                                        <a href="#">
                                            @*<img src="@Url.Action("Defectos", "Fotos", new { idDefecto = item.Fotos.FirstOrDefault().IdDefecto + 0, area = "" })" alt="Image" class="img-responsive img-circle" style="width:30px;height:30px;" />*@
                                        </a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Origen.WorkCenter.BussinesUnit.NombreCorto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Origen.WorkCenter.NombreCorto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Origen.Modulo.NombreCorto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Reportador.Nombre) @Html.DisplayFor(modelItem => item.Reportador.Apellido1) @Html.DisplayFor(modelItem => item.Reportador.Apellido2).
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaReporte)
                                    </td>

                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-default dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">
                                                <i class="fa fa-gear"></i>
                                                <span class="caret"></span>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-right" role="menu" aria-labelledby="menu1">
                                                <li role="presentation">@Html.ActionLink("Editar", "Edit", new { id = item.Id })</li>
                                                <li role="presentation">@Html.ActionLink("Detalles", "Details", new { id = item.Id })</li>
                                                <li role="presentation" class="divider"></li>
                                                <li role="presentation">@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr style="width:100%" class="info"></tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/JS/jquery")
    @Scripts.Render("~/JS/DataTables")
    @Scripts.Render("~/JS/Bootstrap")

    <script>
        $(function () {
            $('#example1').DataTable();

             $("#addNew").on("click", function () {
                var url = "/Operaciones/GembaWalk/Create";

                  $.get(url, function (data) {
                            $('#createAssetContainer').html(data);
                            jQuery.noConflict();
                            $('#createAssetModal').modal('show');
                  });
            });
        });
    </script>

