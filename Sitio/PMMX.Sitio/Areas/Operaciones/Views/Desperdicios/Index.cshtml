@model IEnumerable<PMMX.Modelo.Vistas.CRRPorWorkCenter>

@{
    ViewBag.Title = "Index";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}


@section Styles {


}


<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Desperdicios</h3>
                <div class="box-tools">



                    <a href="@Url.Action("Create", "Desperdicios")" class="btn btn-primary btn-sm">
                        <span class="fa fa-plus" aria-hidden="true"></span>
                    </a>
                    <a href="@Url.Action("Reporte", "Desperdicios")" class="btn btn-primary btn-sm">
                        <span class="fa fa-list-alt" aria-hidden="true"></span>
                    </a>

                </div>
            </div>

            


            <div class="box-body table-responsive">
                <table class="table table-hover table-striped" id="example1">
                    <thead>
                        <tr class="info">
                            <th>
                                @Html.DisplayNameFor(model => model.WorkCenter)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Desperdicio)
                            </th>
                            <th>
                                Total
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.WorkCenter.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.WorkCenter.NombreCorto)
                            </td>
                            <td>
                                @if (item.Desperdicio.Count() > 0)
                                    {
                                    <table class="table table-hover table-striped">
                                        <thead>
                                            <tr class="info">
                                                <th>
                                                    CODE FA
                                                </th>
                                                <th>
                                                    DESCRIPCION
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var code_fa in item.Desperdicio)
                                                {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => code_fa.Code_FA)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => code_fa.Cantidad)
                                                    </td>
                                                    
                                                </tr>
                                                }

                                        </tbody>
                                        <tfoot>
                                            <tr class="info">
                                                <th>
                                                    CODE FA
                                                </th>
                                                <th>
                                                    DESCRIPCION
                                                </th>
                                            </tr>
                                        </tfoot>
                                    </table>

                                    }

                            </td>
                            
                            
                        </tr>
                        }
                    </tbody>
                    
                </table>

            </div>
        </div>
    </div>
</div>




@section Scripts {

}