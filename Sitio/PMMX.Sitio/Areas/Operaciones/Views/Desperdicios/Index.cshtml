@model IEnumerable<PMMX.Modelo.Entidades.Desperdicio>

@{
    ViewBag.Title = "Index";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}


@section Styles {
    @Styles.Render("~/Style/DataTables")

}


<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Desperdicios</h3>
                <div class="box-tools">
                    <a href="@Url.Action("Create", "Desperdicios")" class="btn btn-primary btn-sm">
                        <span class="fa fa-plus" aria-hidden="true"></span>
                    </a>

                </div>
            </div>
            <div class="box-body table-responsive">
                <table class="table table-hover table-striped" id="example1">
                    <thead>
                        <tr class="info">
                            <th>
                                @Html.DisplayNameFor(model => model.MarcaDelCigarrillo.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Reportante.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Seccion.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.WorkCenter.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cantidad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Fecha)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MarcaDelCigarrillo.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Reportante.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Seccion.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.WorkCenter.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cantidad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Fecha)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="info">
                            <th>
                                @Html.DisplayNameFor(model => model.MarcaDelCigarrillo.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Reportante.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Seccion.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.WorkCenter.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cantidad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Fecha)
                            </th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>

            </div>
        </div>
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/JS/DataTables")
    <script>
        $(function () {
            $('#example1').DataTable();
        });
        $('#example1 input[type="checkbox"]').iCheck({
            checkboxClass: 'icheckbox_flat-blue',
            radioClass: 'iradio_flat-blue'
        });
    </script>
}