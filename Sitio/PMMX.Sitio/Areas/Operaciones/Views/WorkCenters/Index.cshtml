@model IEnumerable<PMMX.Modelo.Entidades.Maquinaria.WorkCenter>

@{
    ViewBag.Title = "Index";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    @Styles.Render("~/Style/DataTables")
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">LUPS</h3>
                <div class="box-tools">
                    <a href="@Url.Action("Create", "WorkCenters")" class="btn btn-primary btn-sm">
                        <span class="fa fa-plus" aria-hidden="true"></span>
                    </a>

                </div>
            </div>
            <div class="box-body table-responsive">
                <table class="table table-hover table-striped" id="example1">
                    <thead>
                        <tr class="info">
                            <th>
                                @Html.DisplayNameFor(model => model.BussinesUnit.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NombreCorto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Responsable.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Activo)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr class=@(item.Activo ? "success" : "danger")>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BussinesUnit.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NombreCorto)
                                </td>
                                <td>
                                    @if (item.Responsable != null)
                                    {
                                        <div class="user-block">
                                            <img class="img-circle img-responsive img-bordered-sm" src="@Url.Action("Usuario", "Fotos", new { idPersona = item.IdResponsable, area = "" })" alt="User Image">
                                            <span class="username">
                                                <a href="#">
                                                    @Html.DisplayFor(modelItem => item.Responsable.Nombre) @Html.DisplayFor(modelItem => item.Responsable.Apellido1) @Html.DisplayFor(modelItem => item.Responsable.Apellido2).
                                                </a>
                                            </span>
                                            @*<span class="description">Asignado el - @Html.DisplayFor(modelItem => item.FechaReporte)</span>*@
                                        </div>
                                    }

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Activo)
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-default dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">
                                            <i class="fa fa-gear"></i>
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-right" role="menu" aria-labelledby="menu1">
                                            <li role="presentation">@Html.ActionLink("Editar", "Edit", new { id = item.Id })</li>
                                            <li role="presentation">@Html.ActionLink("Detalles", "Details", new { id = item.Id })</li>
                                            <li role="presentation" class="divider"></li>
                                            <li role="presentation">@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/JS/DataTables")
    <script>
        $(function () {
            $('#example1').DataTable();
        });
        $('#example1 input[type="checkbox"]').iCheck({
            checkboxClass: 'icheckbox_flat-blue',
            radioClass: 'iradio_flat-blue'
        });
    </script>
}
